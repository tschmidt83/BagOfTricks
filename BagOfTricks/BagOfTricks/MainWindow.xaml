<Window x:Class="BagOfTricks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BagOfTricks"
        xmlns:v="clr-namespace:BagOfTricks.Views"
        xmlns:vm="clr-namespace:BagOfTricks.ViewModels"
        mc:Ignorable="d"
        Title="Bag Of Tricks" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Szene">
                <MenuItem Header="Speichern"/>
                <MenuItem Header="Laden"/>
            </MenuItem>
            <MenuItem Header="Abenteuer-Modus">
                <MenuItem Header="Aktivieren"/>
            </MenuItem>
        </Menu>
        
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Musik">
                <v:BackgroundMusicView/>
            </TabItem>
            <TabItem Header="Effekte">
                <v:SoundEffectsView/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
